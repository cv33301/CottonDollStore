@model DbCottonDollStore.Models.OrderDetail

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OrderDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderID" class="control-label"></label>
                <input asp-for="OrderID" class="form-control" />
                <span asp-validation-for="OrderID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProSpecID" class="control-label"></label>
                <input asp-for="ProSpecID" class="form-control" />
                <span asp-validation-for="ProSpecID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProID" class="control-label"></label>
                <input asp-for="ProID" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="StoreID" class="control-label"></label>
                <input asp-for="StoreID" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyerReview" class="control-label"></label>
                <input asp-for="BuyerReview" class="form-control" />
                <span asp-validation-for="BuyerReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellerRespond" class="control-label"></label>
                <input asp-for="SellerRespond" class="form-control" />
                <span asp-validation-for="SellerRespond" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Star" class="control-label"></label>
                <input asp-for="Star" class="form-control" />
                <span asp-validation-for="Star" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <p>Order ID: @ViewData["OrderID"]</p>
        <p>Pro Spec ID: @ViewData["ProSpecID"]</p>
        <p>Product ID: @ViewData["ProID"]</p>
        <p>Store ID: @ViewData["StoreID"]</p>
        <p>Quantity: @ViewData["Quantity"]</p>
        <p>Buyer Review: @ViewData["BuyerReview"]</p>
        <p>Seller Respond: @ViewData["SellerRespond"]</p>
        <p>Star: @ViewData["Star"]</p>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

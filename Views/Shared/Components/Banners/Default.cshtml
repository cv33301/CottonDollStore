@model IEnumerable<DbCottonDollStore.Models.Banner>

@{
    Layout = null;
    int i = 0;
}

<div class="bg-light container banner p-0">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @for (int j = 0 ; j < Model.Count() ; j++ )
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@j"
                            class="@(j == 0 ? "active" : "")" aria-current="@(j == 0 ? "true" : "")" aria-label="Slide @(j+1)"></button>
                }
            </div>
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    <div class="carousel-item @(i != 0 ? "active" : "")">
                    <img src="/banner/@item.BannerImg" class="d-block w-100 banner" alt="@item.Information">
                    </div>
                    i++;
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
</div>



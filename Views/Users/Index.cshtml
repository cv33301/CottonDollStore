@model IEnumerable<DbCottonDollStore.Models.User>

@{
    Layout = "_Layout";
    ViewData["Title"] = "會員管理";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">+新增會員</a>
</p>
<table class="table">
    <thead class="bg-dark text-light">
        <tr>
            <th>
                欄
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                管理
            </th>
        </tr>
    </thead>
    <tbody>
@{
    int i = 1;
}
@foreach (var item in Model) {
        <tr>
            <td class="text-secondary">
                @i 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
                @* <img class="photo" src="/img/@item.UserImg"/> *@
            <td>
                @Html.DisplayFor(modelItem => item.UserPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
@*                 @{bool gender = Convert.ToBoolean(item.Gender);}
                @(gender ? "男" : "女") *@
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank.RankID)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.UserID" class="btn btn-outline-secondary">詳細資料</a>
                <a asp-action="Edit" asp-route-id="@item.UserID" class="btn btn-outline-dark">修改</a>
                <a asp-action="Delete" asp-route-id="@item.UserID" class="btn btn-dark btn-outline-light">刪除</a>
            </td>
        </tr>
            i++;
}
    </tbody>
</table>

@model DbCottonDollStore.Models.Category

@{
    Layout = null;
    ViewData["Title"] = "商品類別刪除";
}

<h3>確定刪除此筆資料嗎?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.ParentCategoryNavigation)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.ParentCategoryNavigation.CategoryID)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryID" />
        <input type="submit" value="確定刪除" class="btn btn-danger" />
    </form>
</div>
